<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_intro1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/tutorial_devicebg2"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txt_title_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/rll_view"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:text="Đã bao giờ em nghĩ mình sai ?"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_25"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rll_intro_3"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_intro2"
                android:layout_width="400dp"
                android:layout_height="300dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:src="@drawable/tutorial_devicebg2" />

            <ImageView
                android:id="@+id/img_ava_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/ava_2" />

            <ImageView
                android:id="@+id/img_ava_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:layout_marginTop="00dp"
                android:src="@drawable/ava_5" />

            <ImageView
                android:id="@+id/img_ava_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="120dp"
                android:layout_marginTop="200dp"
                android:src="@drawable/ava_1" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="400dp">

            <ImageView
                android:id="@+id/img_intro3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/list_product2"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_bo_qua"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <View
                    android:id="@+id/view_1"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/indicator_selected" />

                <View
                    android:id="@+id/view_2"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/view_1"
                    android:background="@drawable/indicator_selected" />

                <View
                    android:id="@+id/view_3"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/view_2"
                    android:background="@drawable/indicator_selected" />

            </RelativeLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/btn_bo_qua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/corner_button"
            android:text="@string/skip"
            android:textColor="@color/white"
            android:visibility="invisible" />
    </RelativeLayout>


</FrameLayout>