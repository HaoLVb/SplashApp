<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_info_user_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/btReturnHome"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:background="@drawable/button_in_top_view"
            android:gravity="center"
            android:text="Quay về trang chủ"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btReport"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:background="@drawable/button_in_bottom_view"
            android:gravity="center"
            android:text="Báo cáo vi phạm"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnCancelMore"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/login_button"
            android:text="Đóng"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>
</RelativeLayout>