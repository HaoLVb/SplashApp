<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5">

    <FrameLayout
        android:id="@+id/thirdPageLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.2"
        android:background="@drawable/tutorial_background_white">

        <com.example.levanhao.splashapp.view.customview.tutorial.CircularImageViewFrame
            android:id="@+id/firstZoomIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/ava_1" />

        <com.example.levanhao.splashapp.view.customview.tutorial.CircularImageViewFrame
            android:id="@+id/secondZoomIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ava_2" />

        <com.example.levanhao.splashapp.view.customview.tutorial.CircularImageViewFrame
            android:id="@+id/thirdZoomIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ava_3" />

        <com.example.levanhao.splashapp.view.customview.tutorial.CircularImageViewFrame
            android:id="@+id/fouthZoomIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ava_4" />

        <com.example.levanhao.splashapp.view.customview.tutorial.CircularImageViewFrame
            android:id="@+id/fifthZoomIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ava_5" />

        <com.example.levanhao.splashapp.view.customview.tutorial.ImageViewFrame
            android:id="@+id/thirdPageDeviceImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tutorial_devicebg" />

        <ScrollView
            android:id="@+id/productImageScroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fadingEdge="vertical"
            android:scrollbars="vertical">

            <com.example.levanhao.splashapp.view.customview.tutorial.ImageViewFrame
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/tutorial_main_view"
                android:visibility="visible" />
        </ScrollView>

    </FrameLayout>

    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight="1.8">

        <TextView
            android:id="@+id/third_page_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="120dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:textColor="#000"
            android:textSize="18dp"
            android:textStyle="bold" />


    </FrameLayout>

</LinearLayout>