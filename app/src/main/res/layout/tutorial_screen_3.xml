<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/screenTutorial3"
    style="@android:style/Theme.Translucent.NoTitleBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tutorial_background"
    android:clickable="true"
    android:orientation="vertical">

    <Button
        android:id="@+id/btCloseScreenTutorial3"
        android:layout_width="@android:dimen/app_icon_size"
        android:layout_height="@android:dimen/app_icon_size"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/close_icon" />

    <Button
        android:id="@+id/btTutorialSell"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/sell_button" />

    <ImageView
        android:id="@+id/imageArrowCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btTutorialSell"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="48dp"
        android:layout_marginRight="128dp"
        android:src="@drawable/arrow_camera" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageArrowCamera"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="Nhấn để bắt đầu bán hàng"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />
</RelativeLayout>