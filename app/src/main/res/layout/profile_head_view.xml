<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutHead"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.levanhao.splashapp.view.customview.ClickableViewpager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/headerImageProduct"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.example.levanhao.splashapp.view.customview.ClickableViewpager>

    <ImageView
        android:id="@+id/imNextImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_nextarrow_normal_" />

    <ImageView
        android:id="@+id/imBackImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical|left"
        android:src="@drawable/icon_backarrow_normal"
        android:visibility="gone"/>

</RelativeLayout>